                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <Border Name="DoneButton"
                                Classes="button secondary"
                                Width="300"
                                Height="40"
                                CornerRadius="8"
                                IsVisible="False"
                                PointerPressed="OnDoneButtonPressed">
                            <TextBlock Text="Jeg har aktivert varsler"
                                      FontSize="13"
                                      Foreground="#666666"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <Border Name="SkipButton"
                                Classes="button skip"
                                Width="300"
                                Height="38"
                                CornerRadius="8"
                                PointerPressed="OnSkipButtonPressed">
                            <TextBlock Text="Hopp over"
                                      FontSize="13"
                                      Foreground="#999999"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                    </StackPanel>

                    <TextBlock Text="Du kan endre dette senere i Systeminnstillinger"
                              FontSize="11"
                              Foreground="#999999"
                              HorizontalAlignment="Center"
                              TextAlignment="Center"
                              Margin="0,2,0,0"/>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</UserControl>