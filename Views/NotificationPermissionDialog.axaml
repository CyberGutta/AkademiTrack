<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="AkademiTrack.Views.NotificationPermissionOverlay">

    <UserControl.Styles>
        <Style Selector="Border.button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Border.button:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.02)"/>
        </Style>
        
        <Style Selector="Border.button:pressed">
            <Setter Property="RenderTransform" Value="scale(0.98)"/>
        </Style>
        
        <Style Selector="Border.button.primary">
            <Setter Property="Background" Value="#007AFF"/>
        </Style>
        
        <Style Selector="Border.button.primary:pointerover">
            <Setter Property="Background" Value="#0051D5"/>
        </Style>
        
        <Style Selector="Border.button.secondary">
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        
        <Style Selector="Border.button.secondary:pointerover">
            <Setter Property="Background" Value="#E0E0E0"/>
        </Style>
        
        <Style Selector="Border.button.skip">
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style Selector="Border.button.skip:pointerover">
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        
        <Style Selector="Border.button.close">
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style Selector="Border.button.close:pointerover">
            <Setter Property="Background" Value="#FFEBEE"/>
        </Style>
        
        <Style Selector="Border.button.close:pointerover TextBlock">
            <Setter Property="Foreground" Value="#FF3B30"/>
        </Style>
    </UserControl.Styles>

    <Grid Name="OverlayRoot">
        <!-- Dimmed background -->
        <Border Background="#80000000" 
                PointerPressed="OnBackgroundPressed"/>
        
        <Border Background="White"
                CornerRadius="12"
                BoxShadow="0 8 32 0 #40000000"
                Width="480"
                MaxHeight="580"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="25">
            
            <Grid>
                <Border Classes="button close"
                        Name="CloseButton"
                        Width="32"
                        Height="32"
                        CornerRadius="16"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,-10,-10,0"
                        PointerPressed="OnCloseButtonPressed">
                    <TextBlock Text="âœ•"
