                              HorizontalAlignment="Center"
                              Foreground="#1A1A1A"/>

                    <TextBlock TextWrapping="Wrap"
                              FontSize="13"
                              Foreground="#666666"
                              HorizontalAlignment="Center"
                              TextAlignment="Center"
                              MaxWidth="380"
